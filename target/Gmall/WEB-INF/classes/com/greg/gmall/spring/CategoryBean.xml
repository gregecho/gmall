<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="baseService" class="com.greg.gmall.service.imp.BaseServiceImp" lazy-init="true" />

	<bean id="baseDao" class="com.greg.gmall.dao.imp.BaseDaoImp"
		lazy-init="true">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<!-- <context:component-scan base-package="com.greg.gmall" /> -->
	<bean id="categoryService" class="com.greg.gmall.service.imp.CategoryServiceImp"
		parent="baseService" />

	<bean id="categoryDao" class="com.greg.gmall.dao.imp.CategoryDaoImp"
		parent="baseDao" />


	<bean id="categoryAction" class="com.greg.gmall.action.CategoryAction">
		<property name="categoryService" ref="categoryService" />
	</bean>
</beans>